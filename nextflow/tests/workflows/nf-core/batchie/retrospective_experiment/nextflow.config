params {
   experiment_file = "${launchDir}/nextflow/tests/data/unmasked_experiment.h5"
   experiment_name = "test"
   batch_size = 1
}

process {

    publishDir = { "${params.outdir}" }

    withName: CALCULATE_DISTANCE_MATRIX_CHUNK {
        ext.args = [
            '--model', 'SparseDrugCombo',
            '--model-param', 'n_embedding_dimensions=2',
            '--distance-metric', 'MSEDistance'
        ].join(' ')
    }

    withName: ADVANCE_RETROSPECTIVE_EXPERIMENT {
        ext.args = [
            '--model', 'SparseDrugCombo',
            '--model-param', 'n_embedding_dimensions=2'
        ].join(' ')
    }

    withName: SELECT_NEXT_BATCH {
        ext.args = [
            '--model', 'SparseDrugCombo',
            '--model-param', 'n_embedding_dimensions=2',
            '--scorer', 'RandomScorer',
        ].join(' ')
    }

    withName: TRAIN_MODEL {
        ext.args = [
            '--model', 'SparseDrugCombo',
            '--model-param', 'n_embedding_dimensions=2',
            '--n-burnin', '1',
            '--n-samples', '3',
            '--thin', '1'
        ].join(' ')
    }

    withName: PREPARE_RETROSPECTIVE_EXPERIMENT {
        ext.args = [
            '--plate-generator', 'RandomPlateGenerator'
        ].join(' ')
    }
}
